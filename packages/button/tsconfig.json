{
  "compilerOptions": {
    /* Basic Options */
    "outDir": "dist",
    "baseUrl": "./",
    "declaration": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "jsx": "react",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": ["react", "react-dom", "react-native", "node", "jest"]
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
